<% provide(:title, 'Account activation required') %>
<div class="page-header">
	<h1>
		<small>Please activate your account</small>
	</h1>
</div>

<%= simple_form_for @email, url: user_activations_path,
 			html: { class: "form-horizontal" } do |f| %>
	<fieldset>
    <%= f.input :email %>
		<div class="control-group">
			<div class="controls">
				<%= f.submit "Resend activation email", class: "btn" %></div>
			</div>
		</div>
	</fieldset>
<% end %>