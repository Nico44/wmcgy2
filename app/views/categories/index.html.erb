<% provide(:title, 'Categories') %>
<div class="categories">
	<div class="page-header">
		<h1>Categories</h1>
	</div>
	<%= form_for @category do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.text_field :name, placeholder: "Enter a new category" %>
		<%= f.submit "Add" %>
	<% end %>
	<% if @categories.any? %>
		<table>
			<tbody>
				<% @categories.each do |category| %>
				<tr>
					<td>
						<%= best_in_place category, :name, activator: "##{category.id}" %>
					</td>
					<td>
						<a id="<%= "#{category.id}" %>" href="#">Edit</a>
					</td>
					<td>
						<%= link_to "Delete", category, method: :delete %>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	<% else %>
		<div class="well">
			Use this page to create categories for your transactions, for example: Groceries, Gas etc.
		</div>
	<% end %>
</div>