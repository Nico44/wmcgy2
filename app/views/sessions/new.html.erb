<% provide(:title, 'Sign in') %>
<div class="page-header">
	<h1>
		Sign in
		<small>don't have an account?<%= link_to " ...sign up now!", signup_path %></small>
	</h1>
</div>
<%= simple_form_for @session, html: { class: "form-horizontal" } do |f| %>
	<fieldset>
		<%= f.input :email, hint: "what does this do?", placeholder: "example@example.com" %>
		<%= f.input :password %>
		
		<div class="control-group">
			<label class="control-label">
				Remember me
				<%= f.check_box :remember_me %>
			</label>
			<div class="controls">
				<%= f.submit "Sign in", class: "btn btn-primary btn-wide" %>
			</div>
		</div>
	</fieldset>
<% end %>

<p>
	<%= link_to "Forgot password?", forgot_password_path %>
</p>