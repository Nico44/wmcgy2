<div class="page-header">
	<h1><small>Enter your new password below</small></h1>
</div>
<%= simple_form_for @user, url: update_password_path(params[:id]), 
				html: { class: "form-horizontal" } do |f| %>
	<fieldset>
		<%= f.input :password, label: "New password" %>
		<%= f.input :password_confirmation, label: "Confirmation" %>
  	<div class="control-group">
			<div class="controls">
				<%= f.submit "Update Password", class: "btn btn-success" %>
			</div>
		</div>
	</fieldset>
<% end %>

