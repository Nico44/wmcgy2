<% provide(:title, 'Forgot password') %>
<div class="page-header">
	<h1>
		<small>Reset your password</small>
	</h1>
</div>
<%= simple_form_for @email, url: password_resets_path, 
				html: { class: "form-horizontal" } do |f| %>
	<fieldset>
		<%= f.input :email %>
		<div class="control-group">
			<div class="controls">
				<%= f.submit "Send password reset email", class: "btn" %></div>
			</div>
		</div>
	</fieldset>
<% end %>