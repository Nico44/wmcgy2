<% provide(:title, 'Add Transaction') %>
<div class="transactions">
	<%= render 'shared/mtd_ytd' %>
	<div class="page-header">
		<h1>Add Transaction</h1>
	</div>
	<%= hidden_field_tag 'category_names', @category_names %>
	<%= simple_form_for @transaction, html: { class: "form-horizontal" }  do |f| %>
		<fieldset>
			<%= render 'fields', f: f %>
			<div class="control-group">
				<div class="controls">
					<%= f.submit "Add transaction", class: "btn btn-primary" %>
				</div>
			</div>
		</fieldset>
	<% end %>
</div>