<% provide(:title, 'Add Transaction') %>
<div class="transactions">
	<div class="page-header">
		<h1>Add Transaction</h1>
	</div>
	<%= simple_form_for @transaction, html: { class: "form-horizontal" }  do |f| %>
		<fieldset>
			<%= f.input :is_debit, as: :radio_buttons, label: '',
				collection: [[:Expense, 1], [:Income, 0]], checked: 1 %>
			<%= f.input :date, required: false %>
			<%= f.input :category_id, required: false, collection: @categories %>
			<%= f.input :description, required: false %>
			<%= f.input :amount, required: false %>
			<div class="control-group">
				<div class="controls">
					<%= f.submit "Add transaction", class: "btn" %>
				</div>
			</div>
		</fieldset>
	<% end %>
</div>