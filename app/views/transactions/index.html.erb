<% provide(:title, 'Transactions') %>
<div class="transactions">
	<div class="page-header">
		<h1>Transactions</h1>
	</div>
	<% if @transactions.any? %>
		<%= will_paginate :renderer => BootstrapPagination::Rails %>
		<table>
			<thead>
				<tr>
					<th>Date</th>
					<th>Category</th>
					<th>Description</th>
					<th>Amount</th>
				</tr>
			</thead>
			<tbody>
				<%= render @transactions %>
			</tbody>
		</table>
		<%= will_paginate :renderer => BootstrapPagination::Rails %>
	<% end %>
</div>