<% provide(:title, 'Transactions') %>
<div class="transactions">
	<div class="page-header">
		<h1>Transactions</h1>
	</div>
	<%= link_to 'Add new transaction', new_transaction_path, class: 'btn btn-primary btn-wide' %>
	<% if @transactions.any? %>
		<%= will_paginate renderer: BootstrapPagination::Rails %>
		<table>
			<thead>
				<tr>
					<th><%= sortable "date" %></th>
					<th><%= sortable "category" %></th>
					<th><%= sortable "description" %></th>
					<th><%= sortable "amount" %></th>
				</tr>
			</thead>
			<tbody>
				<%= render @transactions %>
			</tbody>
		</table>
		<%= will_paginate renderer: BootstrapPagination::Rails %>
	<% end %>
</div>